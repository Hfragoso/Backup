<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.heber.w3d3_ex01.MainActivity">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/btn_main_thread"
        android:text="MAIN THREAD"
        android:onClick="doInMainThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_separate_thread"
        android:text="BACKGROUND THREAD"
        android:onClick="doInBackgroundThread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_handler"
        android:text="HANDLER"
        android:onClick="doWithHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_looper"
        android:text="LOOPER"
        android:onClick="doWithLooper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_async_task"
        android:text="ASYNC TASK"
        android:onClick="doWithAsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
